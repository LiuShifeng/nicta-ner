# NAME TYPES: (order matters, these are the rows in the w array
Name Types: LOCATION PERSON ORGANIZATION

# FEATURES: (order matters, each feature is indexed into the w array below
Feature: RuledWordFeature PERSON_NAME
Feature: RuledWordFeature PERSON_KEYWORD
Feature: RuledWordFeature COUNTRY_NAME
Feature: RuledWordFeature CITY_NAME
Feature: RuledWordFeature ORG_KEYWORD
Feature: ExistingPhraseFeature WIKI_ORG
Feature: ExistingPhraseFeature WIKI_PERSON
Feature: ExistingPhraseFeature WIKI_PLACE
Feature: RuledWordFeature PLACE_KEYWORD
Feature: RuledWordFeature STATES
Feature: PrepositionContextFeature PREP_LOCATION
Feature: PrepositionContextFeature PREP_ORG
Feature: RuledWordFeature WIKI_ORG_EXTRACTION
Feature: RuledWordFeature WIKI_PER_EXTRACTION
Feature: RuledWordFeature WIKI_LOC_EXTRACTION


# W: each value corresponds to the weight of that feature for that particular entity class type
#             LOCATION                  |               PERSON                      |                ORGANIZATION
w: 0 0 15 15 0 0 0 25 20 10 10 0 0 0 10 | 20 30 0 0 0 -10 25 -10 0 0 0 0 -10 10 -10 | 0 0 0 0 25 25 -10 -10 0 0 0 10 10 -10 -10
